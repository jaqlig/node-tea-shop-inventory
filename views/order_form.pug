extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label Item:
      div
        select(name="item")#orderitems.datatable-input
          for item in items
              option(value=item._id) #{item.name}
        input(type="reset")
    div.form-group
      label(for='quantity') Quantity:
      input#quantity.form-control(type='number' name='quantity' required='true' value=(undefined===item ? '' : item.quantity))
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg
