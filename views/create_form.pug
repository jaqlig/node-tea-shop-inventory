extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label Category:
      div
        for category in categories
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='radio', name='category', id=category._id, required='true', value=category._id, checked = category.checked)
            label(for=category._id) #{category.name}
    div.form-group
      label(for='name') Item name:
      input#name.form-control(type='text' name='name' required='true' value=(undefined===item ? '' : item.name))
    div.form-group
      label(for='price') Price:
      input#price.form-control(type='number' name='price' required='true' value=(undefined===item ? '' : item.price))
    div.form-group
      label(for='quantity') Quantity:
      input#quantity.form-control(type='number' name='quantity' required='true' value=(undefined===item ? '' : item.quantity))
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea' name='description' rows='3') #{undefined===item ? '' : item.description}
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg